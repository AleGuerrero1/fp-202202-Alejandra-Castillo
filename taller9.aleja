Funcion rta <- HMayor(año1, mes1, dia1, año2, mes2, dia2)
	rta <- 1
	si año2<año1 entonces
		rta <-2
	sino 
		si año2 =año1 entonces
			si mes2<mes1 entonces
				rta <- 2
			sino 
				si mes2=mes1 y dia2 <dia1 entonces
					rta<-2
				FinSi
			FinSi
		FinSi
	FinSi
FinFuncion

